<h2>Edit <%= @figure.name %> :</h2>

<form action="/figures/<%= @figure.id %>" method="POST">
   <input id="hidden" type="hidden" name="_method" value="patch">

  <h3><p>Edit Name:</p></h3>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br>

  <h3><p>Edit Title(s):</p></h3>
  <% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %></input>
  <br>
  <% end %>
  <br>

  <h4><p>Add New Title</p></h4>
  <p><input type="text" name="title[name]" id="new_title"></p>
  <br>

  <h3><p>Edit Landmark(s):</p></h3>
  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
  <br>
  <% end %>

  <h4><p>Add New Landmark</p></h4>
  <p><input type="text" name="landmark[name]" id="new_landmark"></p>
  <br>

   <input type="submit" value="Edit Figure">


</form>
